  "repository": {
    "type": "git",
    "url": "https://github.com/easy-webpack/config-aurelia.git"
  },
  "keywords": [
    "aurelia",
    "webpack",
    "easy",
    "configurator",
    "configuration",
    "config",
    "simple"
