{
  "name": "@easy-webpack/config-aurelia",
  "description": "Easy Webpack configuration function for Aurelia",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "TS_NODE_FAST=true TS_NODE_NO_PROJECT=true ava",
